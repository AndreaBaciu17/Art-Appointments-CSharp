<style>
    :root {
        --primary: #550c89;
        --secondary: #b79cf8;
        --background: #c4aaff;
        --text: #ffffff;
    }

    .custom-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
    }

    .custom-title {
        color: var(--secondary);
        font-size: 2.5rem;
        margin-bottom: 2rem;
        animation: glow 2s ease-in-out infinite alternate;
    }

    @@keyframes glow {
        from {
            text-shadow: 0 0 5px var(--secondary);
        }
        to {
            text-shadow: 0 0 20px var(--secondary);
        }
    }

    .profile-image {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        border: 4px solid var(--primary);
        margin: 2rem auto;
        transition: transform 0.3s ease;
        cursor: pointer;
        box-shadow: 0 0 20px var(--secondary);
    }

    .profile-image:hover {
        transform: scale(1.05);
    }

    .custom-description {
        font-size: 1.2rem;
        max-width: 900px;
        margin: 2rem auto; 
        line-height: 1.2;
        color: var(--text);
        text-align: left; 
        display: block;
        padding-left: 8%;
    }

    .social-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        margin-top: 3rem;
    }

    .primary-social {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .secondary-social {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        justify-content: center;
        max-width: 800px;
    }

    .social-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        transition: transform 0.3s ease;
        cursor: pointer;
    }

    .social-icon:hover {
        transform: scale(1.1);
    }

    .secondary-social .social-icon {
        filter: grayscale(100%);
        opacity: 0.7;
    }

    .secondary-social .social-icon:hover {
        opacity: 1;
    }

    .geometric-shape {
        position: fixed;
        opacity: 0.1;
        z-index: -1;
    }

    #shape1 {
        top: 10%;
        left: 5%;
        animation: rotate 20s linear infinite;
    }

    #shape2 {
        bottom: 10%;
        right: 5%;
        animation: rotate 15s linear infinite reverse;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .custom-link {
        color: var(--secondary);
        text-decoration: none;
    }

    .custom-link:hover {
        text-decoration: underline;
    }
</style>

