@model Appointment

<h2>Delete Appointment</h2>
<hr />
<p>Are you sure you want to delete the following appointment? You cannot undo</p>

@if(ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<!-- not sure About this part:/ -->

<dl>
    <dt>Date:</dt>
    <dd>@Model.date.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>

    <dt>Description:</dt>
    <dd>@Model.description</dd>

    <dt>Meeting Format:</dt>
    <dd>@Model.format</dd>

    <dt>Time Allotted:</dt>
    <dd>@Model.timeAllotted minutes</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="OwnerId" />
    <input type="submit" value="Delete Appointment" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this appointment?');" />
</form>

<div>
    <a asp-controller="Appointment" asp-action="Index">Back to Appointments</a>
</div>
